doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
        link(rel='stylesheet' href='./css/bootstrap.css')
        link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
        link(rel='stylesheet' href='./css/main.css')
        title Loreto Rainbow Homes | Reach us
    
    body
        include includes/header.pug

        main#reach-us
            .jumbotron.jumbotron-fluid.reach-us-bg.mb-0

            .container.py-5
                h1.text-center.mb-5 Reach us
                .row
                    .col-md-4.text-center
                        .black-dot.mx-auto.mb-4
                            i.fas.fa-map-marker-alt(style='font-size: 24px;')
                        p
                            | 7, Middleton Row,
                            br
                            | Kolkata-700071
                    .col-md-4.text-center
                        .black-dot.mx-auto.mb-4
                            i.fas.fa-phone(style='font-size: 24px;')
                        p
                            | +91 33 4603 6292
                            br
                            | +91 833 498 1888
                    .col-md-4.text-center
                        .black-dot.mx-auto.mb-4
                            i.far.fa-envelope(style='font-size: 24px;')
                        p
                            | loretorhcoor@gmail.com
                            br
                            | loretoresource.rh@gmail.com

            .contact-block(style='background: rgba(44,42,45, 1.0);')
                    .container
                        .row
                            .col-md-5.py-5.my-0
                                h3 Leave a Reply
                                p.mb-3 All fields are mandatory
                                form
                                    .row
                                        .col-md-6
                                            .form-group
                                                label.d-none(for='name') Name
                                                input#name.form-control(type='text' placeholder='Name')
                                        .col-md-6
                                            .form-group
                                                label.d-none(for='email') Email
                                                input#email.form-control(type='email' placeholder='Email')
                                    .row
                                        .col-md-12
                                            .form-group
                                                label.d-none(for='message') Message
                                                textarea#message.form-control(rows='3' placeholder='Message')
                                    .row
                                        .col-md-12
                                            button.btn.btn-orange.px-5(type='submit') Subscribe
                            .col-md-7
                                iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3684.7900180076167!2d88.34971691495917!3d22.54953738519458!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a0277106c508dd9%3A0x8c5338c151623c22!2s7%2C+Sir+William+Jones+Sarani%2C+Park+Street+area%2C+Kolkata%2C+West+Bengal+700071!5e0!3m2!1sen!2sin!4v1545926606637' width='100%' height='400' frameborder='0' style='border:0' allowfullscreen='')
        
        include includes/footer.pug